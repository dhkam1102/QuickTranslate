{
    "manifest_version": 3,
    "name": "Language Translator",
    "version": "1.0",
    "description": "Highlight text on a webpage and translate it using Google Translate API.",
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
