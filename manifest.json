{
    "name": "Language Translator",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Translate text using Google Translate API.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/translate.png"
    },
    "permissions": [
        "contextMenus", 
        "activeTab",   
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["style.css"],
            "matches": ["<all_urls>"]
        }
    ]
    
}
